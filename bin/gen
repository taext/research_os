#!/home/dd/anaconda3/bin/xonsh

# gen v1.0 - searches gen.lib.rus.ec  (July 25nd '17)

import sys

arg_list = sys.argv[1:]

search_term = ''
for arg in arg_list:
    search_term += arg + ' '

search_term = search_term[:-1].replace(' ','+')

url = 'http://gen.lib.rus.ec/search.php?req=mysearchquery&lg_topic=libgen&open=0&view=simple&res=25&phrase=1&column=def'
url = url.replace('mysearchquery', search_term)

google-chrome @(url) > /dev/null 2> /dev/null

print(url)

