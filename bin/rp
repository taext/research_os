#!/bin/sh

if [ $# -ge 1 ]         # if (count) argument passed
then                    # use the value passed
    cat ~/Documents/even_newer_powercasts/powercasts/podcasts_opml.txt | shuf -n $1
else                    # else default to 1
    cat ~/Documents/even_newer_powercasts/powercasts/podcasts_opml.txt | shuf -n 1

fi
